<form class="newMessageForm" method="POST" action="/new">
    <h2>Create New Message</h2>
    <div class="inputContainer">
        <label for="messageUser">Name</label>
        <input class="input" type="text" id="messageUser" name="messageUser" placeholder="Jeppe" required>
    </div>
    <div class="inputContainer"> 
        <label for="messageText">Message</label>
        <textarea name="messageText" class="input" id="messageText" placeholder="Hello world!" required></textarea>     
    </div>
    <button class="newMessageButton" type="submit">SUBMIT</button> 
</form>
